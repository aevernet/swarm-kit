# ------------------------------------------------------------------
# FUNCTIONS
# ------------------------------------------------------------------
#
# INSTALL FUNCTION
#
go-install()
{
    echoLog "spacer"

    aptInstall golang-go

    echoLog "spacer"
}
#
# CONFIG FUNCTION
#
go-config()
{
    echoLog "spacer"

    echoLog "No Config Requirement"

    echoLog "spacer"
}
#
# REMOVE FUNCTION
#
go-remove()
{
    echoLog "spacer"

    aptRemove golang-go

    echoLog "spacer"
}
