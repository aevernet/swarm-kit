# preserve rootPath
[[ -z "$rootPath" ]] && declare -gx rootPath="$PWD"

# ------------------------------------------------------------------
# FUNCTIONS
# ------------------------------------------------------------------
#
# INSTALL FUNCTION
#
bundler-install()
{
    echoLog "spacer"

    aptInstall bundler

    echoLog "spacer"
}
#
# CONFIG FUNCTION
#
bundler-config()
{
    echoLog "spacer"

    echoLog "No config requirement"

    echoLog "spacer"
}
#
# REMOVE FUNCTION
#
bundler-remove()
{
    echoLog "spacer"

    aptRemove bundler

    echoLog "spacer"
}
