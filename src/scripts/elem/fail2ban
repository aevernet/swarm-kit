# preserve rootPath
[[ -z "$rootPath" ]] && declare -gx rootPath="$PWD"

# ------------------------------------------------------------------
# FUNCTIONS
# ------------------------------------------------------------------
#
# INSTALL FUNCTION
#
fail2ban-install()
{
    echoLog "spacer"

    echoLog "Installing Fail2Ban"
    aptInstall fail2ban

    echoLog "spacer"
}
#
# CONFIG FUNCTION
#
fail2ban-config()
{
    echoLog "spacer"

    echoLog "Configuring Fail2Ban"

    service fail2ban status

    if [[ ! -f /etc/fail2ban/jail.local ]]; then
        cat << EOF > /etc/fail2ban/jail.local
[DEFAULT]
bantime = 8h
ignoreip = 127.0.0.1/8
ignoreself = true

[sshd]
enabled = true
port = 2022
filter = sshd
logpath = /var/log/auth.log
maxretry = 3
EOF
    fi

    service fail2ban restart

    echoLog "spacer"
}
#
# REMOVE FUNCTION
#
fail2ban-remove()
{
    echoLog "spacer"

    echoLog "Removing Fail2Ban"
    aptRemove fail2ban

    echoLog "spacer"
}
