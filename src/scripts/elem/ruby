# preserve rootPath
[[ -z "$rootPath" ]] && declare -gx rootPath="$PWD"

# ------------------------------------------------------------------
# FUNCTIONS
# ------------------------------------------------------------------
#
# INSTALL FUNCTION
#
ruby-install()
{
    echoLog "spacer"

    aptInstall ruby-full

    echoLog "spacer"
}
#
# CONFIG FUNCTION
#
ruby-config()
{
    echoLog "spacer"

    echoLog "No config requirement"

    echoLog "spacer"
}
#
# REMOVE FUNCTION
#
ruby-remove()
{
    echoLog "spacer"

    aptRemove ruby-full

    echoLog "spacer"
}
