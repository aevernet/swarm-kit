# ------------------------------------------------------------------
# FUNCTIONS
# ------------------------------------------------------------------
#
# INSTALL FUNCTION
#
ufw-install()
{
    echoLog "spacer"

    echoLog "Installing UFW"
    aptInstall ufw

    echoLog "spacer"
}
#
# CONFIG FUNCTION
#
ufw-config()
{
    echoLog "spacer"

    echoLog "Configuring UFW"
    ufw default allow outgoing
    ufw default deny incoming
    ufw allow 2022/tcp

    ufw enable

    ufw status

    echoLog "spacer"
}
#
# REMOVE FUNCTION
#
ufw-remove()
{
    echoLog "spacer"

    echoLog "Removing UFW"
    aptRemove ufw

    echoLog "spacer"
}
