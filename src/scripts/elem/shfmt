# ------------------------------------------------------------------
# FUNCTIONS
# ------------------------------------------------------------------
#
# INSTALL FUNCTION
#
shfmt-install()
{
    echoLog "spacer"

    aptInstall shfmt

    echoLog "spacer"
}
#
# CONFIG FUNCTION
#
shfmt-config()
{
    echoLog "spacer"

    echoLog "No Config Requirement"

    echoLog "spacer"
}
#
# REMOVE FUNCTION
#
shfmt-remove()
{
    echoLog "spacer"

    aptRemove shfmt

    echoLog "spacer"
}
