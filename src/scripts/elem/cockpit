# preserve rootPath
[[ -z "$rootPath" ]] && declare -gx rootPath="$PWD"

# ------------------------------------------------------------------
# FUNCTIONS
# ------------------------------------------------------------------
#
# INSTALL FUNCTION
#
cockpit-install()
{
    echoLog "spacer"

    aptInstall cockpit

    echoLog "spacer"
}
#
# CONFIG FUNCTION
#
cockpit-config()
{
    echoLog "spacer"

    service cockpit start
    service cockpit status

    echoLog "spacer"
}
#
# REMOVE FUNCTION
#
cockpit-remove()
{
    echoLog "spacer"

    aptRemove cockpit

    echoLog "spacer"
}
